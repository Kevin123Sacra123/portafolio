    <section class="flex items-center justify-center">

        <div class="block m-5 ">
            <form class="block" action="https://formsubmit.co/08fa499aeff733aeef82d3087501d09b" method="POST">
                <label class="text-white text-2xl m-2">Nombres:</label>
