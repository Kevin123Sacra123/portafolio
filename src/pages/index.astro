---
import Layout from '../layouts/Layout.astro';
import avatar from '../images/avatar.jpg';
//proyectos
import calculadora from '../images/calculadora.jpg';
import crud from '../images/CRUD.jpg';
import juegosJS from '../images/gamesJS.jpg';
import cv from '../Curriculum Vitae.pdf';

---

<Layout title="Portafolio">
    <section id="Inicio" class="Inicio flex justify-center">
        <div id="Inicio1" class="max-w-3xl flex flex-col md:flex-row p-2 rounded-2xl border-4 border-white ">
            <div class="flex items-center justify-center">
                <img alt="personaje" class="p-5 rounded-full" src={avatar.src}>
            </div>
            <div class="block">
                <h1 class="m-8 text-6xl text-center text-white">Kevin Sacramento</h1>
                <p class="m-5 text-slate-50 text-center text-lg" >
                    Estudiante de Desarrollo de software
                </p>
                <div class="flex items-center justify-center text-center text-white text-4xl">
                    <a href="https://github.com/Kevin123Sacra123" target="_blank">
                        <i class="fa-brands fa-github brillo"></i>
                    </a>
                </div>    
            </div>
        </div>
    </section>
    <h1 id="Sobre" class="m-10 text-6xl text-white text-center" >Sobre mi</h1>
    <section class="Sobre">
        <p class="m-5 text-slate-50 text-center text-lg mx-20 md:mx-80" >
            soy <strong class="brillo">Kevin Jair</strong> , estudiante de programacion, con interes en la animacion con javascript y capacidad del backend, obsesionado con combinar tecnologias frontend y backend y tambien en la creacion de videojuegos con Unity, Godot y GameMaker 2.
        </p>
        <div class="block sm:items-center sm:flex sm:justify-center">
            <div class="block m-3">
